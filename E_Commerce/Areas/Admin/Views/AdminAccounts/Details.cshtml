@model E_Commerce.Models.Account

@{
    ViewData["Title"] = "Chi Tiết Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Quản Lý Tài Khoản</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" class="breadcrumb-item">Quản Lý Tài Khoản</a>
            <span class="breadcrumb-item active">Chi Tiết Tài Khoản</span>
        </nav>
    </div>
</div>

<div class="form-layout">
    <div class="row mg-b-25">
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" disabled />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" disabled />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.QuyenTruyCap" disabled></select>
            </div>
        </div>
        <form>
            <div class="col-lg-3">
                <div class="form-group d-flex align-items-center p-t-30">
                    <div class="switch m-r-10">
                        <input type="checkbox" asp-for="Active" disabled>
                        <label for="Active"></label>
                    </div>
                    <label>Active</label>
                </div>
            </div>
        </form>
    </div>
    <form asp-controller="AdminLocations">
        <button class="btn btn-secondary bd-0" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index">Back To List</button>
    </form>
</div>
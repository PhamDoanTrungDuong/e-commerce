@model IEnumerable<E_Commerce.Models.Account>

@{
    ViewData["Title"] = "Quản Lý Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Quản Lý Tài Khoản</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Quản Lý Tài Khoản</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class=" m-b-15">
            <a class="btn btn-primary" asp-controller="AdminAccounts" asp-action="Create">
                <i class="anticon anticon-plus-circle m-r-5"></i>Thêm Tài Khoản
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>HỌ TÊN</th>
                        <th>TRẠNG THÁI</th>
                        <th>QUYỀN TRUY CẬP</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.AccountId
                                </td>
                                <td>
                                    <p>Họ và Tên: @item.FullName</p>
                                    <p>Email: @item.Email</p>
                                    <p>Số điện thoại: @item.Phone</p>
                                    <p>Đăng nhập lần cuối: @item.LastLogin</p>
                                </td>
                                <td>
                                    @if (@item.Active)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Active</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-danger badge-dot m-r-10"></div>
                                            <div>Block</div>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @item.Role.RoleName
                                </td>
                                <td class="text-right">
                                    <a class="btn btn-success btn-sm m-r-5" Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId">View</a>
                                    <a class="btn btn-warning btn-sm m-r-5 text-black-50" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId"><i class="anticon anticon-edit"></i> Update</a>
                                    <a class="btn btn-danger btn-sm m-r-5 text-white" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.AccountId"><i class="anticon anticon-delete"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

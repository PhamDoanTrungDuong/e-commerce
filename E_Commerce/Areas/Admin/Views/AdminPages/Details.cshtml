@model E_Commerce.Models.Page

@{
    ViewData["Title"] = "Chỉnh Sửa Pages";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Quản Lý Pages</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item">Quản Lý Pages</a>
            <span class="breadcrumb-item active">Chỉnh sửa Pages</span>
        </nav>
    </div>
</div>
<div class="form-layout">
    <div class="row mg-b-25">
        <div class="col-lg-4">
            <div class="form-group">
                <label class="form-control-label">TÊN PAGES: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="PageName" disabled>
            </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
            <div class="form-group">
                <label class="form-control-label">TIÊU ĐỀ: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="Title" disabled>
            </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
            <div class="form-group">
                <label class="form-control-label">SẮP XẾP: <span class="tx-danger">*</span></label>
                <input class="form-control" type="number" value="0" asp-for="Ordering" disabled>
            </div>
        </div><!-- col-4 -->
    </div><!-- row -->
    <div class="row mg-b-25">
        <div class="col-lg-12">
            <div class="form-group">
                <label class="form-control-label">NỘI DUNG: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="Contents" disabled>
            </div>
        </div><!-- col-4 -->
    </div>
    <div class="row mg-b-25">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="font-weight-semibold">Hình Ảnh: </label>
                <img src="~/images/pages/@Model.Thumb" width="200">
            </div>
        </div><!-- col-4 -->
        <div class="col-lg-6">
            <div class="form-group d-flex align-items-center p-t-30">
                <div class="switch m-r-10">
                    <input type="checkbox" asp-for="Published">
                    <label for="Published"></label>
                </div>
                <label>Published</label>
            </div>
        </div><!-- col-4 -->
    </div><!-- row -->
    <div class="row mg-b-25">
        <div class="col-lg-4">
            <div class="form-group">
                <label class="form-control-label">Alias: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="Alias" disabled>
            </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
            <div class="form-group">
                <label class="form-control-label">MetaKey: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="MetaKey" disabled>
            </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
            <div class="form-group">
                <label class="form-control-label">MetaDesc: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="MetaDesc" disabled>
            </div>
        </div><!-- col-4 -->
    </div>
</div><!-- form-layout -->

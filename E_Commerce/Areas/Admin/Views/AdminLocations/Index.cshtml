@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<E_Commerce.Models.Location>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách Tỉnh/Thành" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Quản Lý Tỉnh/Thành</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách Tỉnh/Thành | Trang: @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class=" m-b-15">
            <a class="btn btn-primary" asp-controller="AdminLocations" asp-action="Create">
                <i class="anticon anticon-plus-circle m-r-5"></i>Thêm Tỉnh/Thành
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Tỉnh/Thành</th>
                        <th>Slug</th>
                        <th>Type</th>
                        <th>Name With Type</th>
                        <th>Path With Type</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.LocationId
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Slug
                                </td>
                                <td>
                                    @item.Type
                                </td>
                                <td>
                                    @item.NameWithType
                                </td>
                                <td>
                                    @item.PathWithType
                                </td>

                                <td class="text-right">
                                    <a class="btn btn-success btn-sm m-r-5" asp-area="Admin" asp-controller="AdminLocations" asp-action="Details" asp-route-id="@item.LocationId">View</a>
                                    <a class="btn btn-warning btn-sm m-r-5 text-black-50" asp-area="Admin" asp-controller="AdminLocations" asp-action="Edit" asp-route-id="@item.LocationId"><i class="anticon anticon-edit"></i> Update</a>
                                    <a class="btn btn-danger btn-sm m-r-5 text-white" asp-area="Admin" asp-controller="AdminLocations" asp-action="Delete" asp-route-id="@item.LocationId"><i class="anticon anticon-delete"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div aria-label="Page navigation">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-action="Index" asp-controller="AdminLocations" asp-area="Admin" asp-route-CatID="@ViewBag.CurrentCateID" asp-route-query="@Model" />
                </ul>
            </div>
        </div>
    </div>
</div>
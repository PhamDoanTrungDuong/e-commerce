@model E_Commerce.Models.Post

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/tin-tuc/{Model.Alias}-{Model.PostId}.html";
    List<Post> lsPost = ViewBag.BaiVietLienQuan;
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/images/posts/@Model.Thumb">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h1 class="breadcrumb-heading text-white-50">@Model.Title</h1>
                        <ul>
                            <li>
                                <a href="/" class="text-white-50">Trang Chủ <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li class="text-white-50">@Model.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-detail-item">
                        <div class="blog-img">
                            <img class="img-full" src="/images/posts/@Model.Thumb" alt="@Model.Title">
                        </div>
                        <div class="blog-content text-start pb-0">
                            <div class="blog-meta text-dim-gray pb-3">
                                <ul>
                                    <li class="date"><i class="fa fa-calendar-o me-2"></i>@Model.CreateDate.Value.ToShortDateString()</li>
                                    <li>
                                        <span class="comments me-3">
                                            <a href="javascript:void(0)">2 Comments</a>
                                        </span>
                                        <span class="link-share">
                                            <a href="javascript:void(0)">Share</a>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                            <h5 class="title mb-4">
                                <a href="@url">@Model.Title</a>
                            </h5>
                            <p class="short-desc mb-4 mb-7">@Model.Scontents</p>
                            @Html.Raw(Model.Contents)
                            <div class="tag-wtih-social">
                                <div class="tag">
                                    <span class="title text-primary">Tags:</span>
                                    <ul>
                                        <li>
                                            <a href="javascript:void(0)">Furniture,</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">Electronic,</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">Fashion</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="social-link">
                                    <ul>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-pinterest-p"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-dribbble"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="feedback-area section-space-top-55">
                                <h4 class="heading mb-1">Bài Viết Liên Quan</h4>
                                <hr />
                                <div class="widgets-item">
                                    <div class="swiper-container widgets-list-slider style-2 swiper-container-multirow swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
                                        <div class="swiper-wrapper" id="swiper-wrapper-f9ce12dc1c15b86c" aria-live="polite" style="width: 288px; transform: translate3d(0px, 0px, 0px);">
                                            @if (lsPost != null && lsPost.Count() > 0)
                                            {
                                                foreach (var item in lsPost)
                                                {
                                                    string url2 = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
                                                    <div class="swiper-slide swiper-slide-active" role="group" aria-label="1 / 3" style="width: 263px; margin-right: 25px;">
                                                        <div class="product-list-item">
                                                            <div class="product-img img-zoom-effect">
                                                                <a href="@url2">
                                                                    <img class="img-full" src="/images/posts/@item.Thumb" alt="@item.Title">
                                                                </a>
                                                            </div>
                                                            <div class="product-content">
                                                                <h5 class="title mb-3">
                                                                    <a href="@url2">@item.Title</a>
                                                                </h5>
                                                                <div class="blog-meta text-manatee pb-1">
                                                                    <ul>
                                                                        <li class="date">@item.CreateDate.Value.ToShortDateString()</li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
